@page
@model RegisterModel
@{
}

<div class="card col-4 shadow">
    <div class="card-header bg-dark bg-opacity-50 text-white h3">Register</div>
    <form method="post" class="card-body">

        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="@Model.Registration.UserName" />
            <label asp-for="@Model.Registration.UserName"></label>
            <span asp-validation-for="@Model.Registration.UserName"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="password" class="form-control" asp-for="@Model.Registration.Password" />
            <label asp-for="@Model.Registration.Password"></label>
            <span asp-validation-for="@Model.Registration.Password"></span>
        </div>

        <div class="form-floating mb-3">
            <input type="password" class="form-control" asp-for="@Model.Registration.ConfirmPassword" />
            <label asp-for="@Model.Registration.ConfirmPassword"></label>
            <span asp-validation-for="@Model.Registration.ConfirmPassword"></span>
        </div>

        <div class="form-floating mb-3">
            <button type="submit" class="btn btn-outline-success">Register</button>
        </div>

    </form>
</div>
